<script>
document.addEventListener('DOMContentLoaded', function() {
  const loadMoreBtn = document.getElementById('loadMoreBtn');
  const galleryGrid = document.querySelector('.gallery-grid');
  let page = 1;
  
  // Données des photos supplémentaires
  const additionalPhotos = [
    {
      image: "https://public.readdy.ai/ai/img_res/4ed14a868532844f0088e84edc1fce0e.jpg",
      title: "Boeing 747",
      description: "Le légendaire Jumbo Jet qui a révolutionné le transport aérien"
    },
    {
      image: "https://public.readdy.ai/ai/img_res/a45c62f554fa9448837b490ec613d875.jpg",
      title: "Vue de l'aile de l'A320",
      description: "Perspective depuis le hublot d'un passager"
    },
    {
      image: "https://public.readdy.ai/ai/img_res/1a0e365d64ba3cc6f96af6b86457c6f0.jpg",
      title: "F-22 Raptor",
      description: "Chasseur furtif de 5ème génération"
    },
    {
      image: "https://public.readdy.ai/ai/img_res/66c81ead36fc7515aaba418d95e51c97.jpg",
      title: "A320 à l'atterrissage",
      description: "Phase finale d'approche au coucher du soleil"
    },
    {
      image: "https://public.readdy.ai/ai/img_res/79913ad38f784aac934e2f01a609bc47.jpg",
      title: "Biplan historique",
      description: "Les débuts de l'aviation commerciale"
    },
    {
      image: "https://public.readdy.ai/ai/img_res/4325a3b2929e319aa5cc132945da3a0a.jpg",
      title: "Maintenance de l'A320",
      description: "Travaux techniques dans un hangar Airbus"
    }
  ];
  
  // Fonction pour créer un élément de galerie
  function createGalleryItem(photo, index) {
    const galleryItem = document.createElement('div');
    galleryItem.className = 'gallery-item rounded-lg overflow-hidden shadow-md';
    
    // Ajouter des classes spéciales pour certains éléments (comme dans la galerie originale)
    if (index % 3 === 0) {
      galleryItem.classList.add('grid-row-span-2');
    }
    if (index % 4 === 3) {
      galleryItem.classList.add('grid-col-span-2');
    }
    
    galleryItem.innerHTML = `
      <img src="${photo.image}" alt="${photo.title}" class="w-full h-full object-cover">
      <div class="p-3 bg-white">
        <p class="font-medium">${photo.title}</p>
        <p class="text-sm text-gray-500">${photo.description}</p>
      </div>
    `;
    
    return galleryItem;
  }
  
  // Gestionnaire d'événement pour le bouton "Voir plus de photos"
  loadMoreBtn.addEventListener('click', function() {
    // Afficher un indicateur de chargement
    loadMoreBtn.innerHTML = '<i class="ri-loader-4-line ri-spin"></i> Chargement...';
    loadMoreBtn.disabled = true;
    
    // Simuler un délai de chargement
    setTimeout(function() {
      // Ajouter les nouvelles photos à la galerie
      additionalPhotos.forEach((photo, index) => {
        const galleryItem = createGalleryItem(photo, index);
        galleryGrid.appendChild(galleryItem);
      });
      
      // Mettre à jour le bouton
      page++;
      if (page >= 3) {
        loadMoreBtn.style.display = 'none'; // Cacher le bouton après 2 pages
      } else {
        loadMoreBtn.innerHTML = 'Voir plus de photos';
        loadMoreBtn.disabled = false;
      }
      
      // Animation simple pour les nouveaux éléments
      const newItems = galleryGrid.querySelectorAll('.gallery-item:nth-last-child(-n+6)');
      newItems.forEach((item, i) => {
        item.style.opacity = '0';
        item.style.transform = 'translateY(20px)';
        item.style.transition = 'opacity 0.5s ease, transform 0.5s ease';
        
        setTimeout(() => {
          item.style.opacity = '1';
          item.style.transform = 'translateY(0)';
        }, i * 100);
      });
    }, 800);
  });
});
</script>
</div>
</section>
